.row
  .col-xs-12.article-list
    - blog.articles.each do |article|
      .article
        %h1.title
          %time= article.date.strftime '%b %e'
          = link_to article.title, article.url

        .summary
          = article.summary

        .text-right.read-more
          = link_to 'Read more', article.url